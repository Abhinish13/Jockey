<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App Theme Base -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="textColorPrimary">@color/primary_text</item>
        <item name="textColorSecondary">@color/secondary_text</item>
        <item name="progressEmptyColor">@color/progress_empty</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="seekArcStyle">@style/SeekArcLight</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="LauncherWidgetTheme" parent="AppTheme">
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/splash_background</item>
        <item name="colorPrimary">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/splash_background</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="BaseText" parent="TextAppearance.AppCompat">
    </style>

    <style name="listTitleText" parent="BaseText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/list_text_header_size</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
    </style>

    <style name="listDetailText" parent="BaseText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/list_text_detail_size</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
    </style>

    <style name="gridTitleText" parent="BaseText">
        <item name="android:textColor">@color/grid_text</item>
        <item name="android:textSize">@dimen/grid_text_header_size</item>
    </style>

    <style name="gridDetailText" parent="BaseText">
        <item name="android:textColor">@color/grid_detail_text</item>
        <item name="android:textSize">@dimen/grid_text_detail_size</item>
    </style>

</resources>